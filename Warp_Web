<body>
  <div class="box">
    <h2>⚡ Warp Config Generator</h2>
    <label>تعداد خروجی:</label>
    <input type="number" id="count" placeholder="مثلا 10" min="1" max="100">
    
    <label>نوع آی‌پی:</label>
    <select id="ipType">
      <option value="ipv4">IPv4</option>
      <option value="ipv6">IPv6</option>
    </select>
    
    <button onclick="generate()">Generate</button>
    <pre id="output"></pre>
  </div>

  <script>
    function randomIPv4() {
      return `${rand(1,255)}.${rand(0,255)}.${rand(0,255)}.${rand(1,254)}`;
    }
    function randomIPv6() {
      let blocks = [];
      for (let i=0; i<8; i++) {
        blocks.push(Math.floor(Math.random()*0xFFFF).toString(16));
      }
      return blocks.join(":");
    }
    function rand(min, max) {
      return Math.floor(Math.random() * (max - min + 1)) + min;
    }
    function generate() {
      let count = parseInt(document.getElementById("count").value);
      let type = document.getElementById("ipType").value;
      let output = "";
      for (let i=1; i<=count; i++) {
        let ip = (type === "ipv4") ? randomIPv4() : randomIPv6();
        let port = rand(1000, 65000);
        output += `warp://${ip}:${port}?ifp=40-80&ifps=40-100&ifpd=4-8&ifpm=m4#Telegram:@Academi_vpn-${i}\n`;
      }
      document.getElementById("output").textContent = output;
    }
  </script>
